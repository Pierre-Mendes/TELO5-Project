/* filtrar */

.buscar {
    background-color: #E2EFF7 !important;
    float: right;
    margin-top: -35px;
}


/* tabelas em geral */

.table {
    font-size: 12pt !important;
    font-weight: bold;
    color: #162E3C !important;
}

.tabela {
    width: 98% !important;
    background-color: #E2EFF7 !important;
    color: #162E3C !important;
    padding: 0!important;
}

tfoot {
    background-color: #C1D5DE !important;
    height: 10px;
    opacity: 1;
}

.abc {
    height: 5px;
}

tbody>tr>td {
    border-right: #C1D5DE 1px solid !important;
}

tbody>tr>td:nth-last-child(1) {
    border-right: none !important;
}

table thead {
    width: 100%;
}

.table-striped>tbody>tr:nth-child(even)>td {
    background-color: #ffffff !important;
}

.table-striped>thead {
    background-color: #C1D5DE !important;
}

.acoes {
    width: 100px;
    text-align: center;
}

.acoes form {
    width: 90px;
}

.acoes .botaoTabela {
    background-color: #ffffff00 !important;
    outline: none;
    border: none;
    cursor: pointer;
    color: #9BB4C3;
    padding-left: 10px;
}

.addtablerow {
    margin-left: -200px;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    border: none;
    background-color: transparent !important;
}

.addtablerow i {
    margin-left: 0px;
    color: #3c8dbc !important;
}

.removetablerow {
    padding-top: 2px;
    width: 40px;
    height: 20px;
    background-color: rgba(255, 255, 255, 0) !important;
    border: none;
    cursor: pointer;
    outline: none;
}

.removetablerow i {
    color: #9BB4C3;
}


/* CSS DE PAGINACAO DAS TABELAS */

.page-item.active .page-link {
    z-index: 1;
    color: #fff;
    background-color: #1B6B9A !important;
    border-color: #1B6B9A !important;
}